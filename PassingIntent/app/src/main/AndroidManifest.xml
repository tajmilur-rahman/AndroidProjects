<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.passingintent">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PassingIntent">
        <activity android:name=".DisplayMessage" android:parentActivityName=".MainActivity" />
        <!-- For API version 15 or lower meta-data is required -->
        <!-- Must be inside the activity tag -->
        <!-- meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" / -->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>